<?xml version="1.0"?>
<odoo>

    <record id="domaines_proprietes_custom_tree" model="ir.ui.view">
        <field name="name">domaines_proprietes_tree_view</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <tree string="Propriétés" decoration-success="state_of_sale=='Offer Received' or state_of_sale=='Offer Accepted'" decoration-bf="state_of_sale=='Offer Accepted'" decoration-warning="state_of_sale=='New'" decoration-muted="state_of_sale=='Sold'" >
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="properties_tags_id" widget="many2many_tags" options="{'color_field': 'couleur'}"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hidden"/>
                <field name="postcode" optional="show"/>
                <field name="total_area" optional="show"/>
                <field name="facades" optional="show"/>
                <field name="garage" optional="show"/>
                <field name="best_offer"/>
                <field name="state_of_sale" optional="hidden"/>
            </tree>
        </field>
    </record>

    <record id="view_domaines_proprietes_search" model="ir.ui.view">
        <field name="name">domaines_proprietes_search</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <search string="Search_Group">
                <field name="name"/>
                <field name="postcode"/>
                <field name="living_area" string="Living Area"
					filter_domain="[('living_area', '>=', self)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="3 Bedroms" name="3_bedroms" domain="[('bedrooms', '=',3)]"/>
                <filter string="Available" name="proprietes_disponibles" domain="['|',('state_of_sale', '=','New'),('state_of_sale', '=','Offer Received')]"/>
                <group expand="1">
                    <filter string="Postcode" name="gostcode" context="{'group_by':'postcode'}"/>
                    <filter string="Garages" name="garage" context="{'group_by':'garage'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="domaines_proprietes_view_form" model="ir.ui.view">
        <field name="name">domaines_proprietes_form</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <form string="Domaines Properties">
                             
                <header style="background-color: #ffffff; position: fixed; top: -6px; width: 100%;">
                    <button name="Sold_action" type="object" class="oe_highlight" string="Sold" invisible="state_of_sale_alias != 'Sold'"/>
                    <button name="Canceled_action" type="object" class="oe_highlight" string="Cancel" invisible="state_of_sale_alias != 'Canceled'" />
                    <field name="state_of_sale_alias" widget="statusbar" statusbar_visible="New,Offer Received,Offer Accepted,Sold"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16" style="font-family: Arial, sans-serif; font-size: 45px; font-weight: bold;"/>
                        </h1>
                        <field name="properties_tags_id" widget="many2many_tags" options="{'color_field': 'couleur'}" />
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': true, 'no_quick_create': true, 'no_open': true}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="state_of_sale"/>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="living_area"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_id" readonly="state_of_sale == 'Offer Accepted' or state_of_sale == 'Sold' or state_of_sale == 'Canceled'" />
                        </page>
                        <page string="Other Information">
                            <group>
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>               
                </sheet>
            </form>
        </field>
    </record>

    <record id="domaines_proprietes_view_kanban" model="ir.ui.view">
        <field name="name">domaines_proprietes_kanban</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" group_create="False" groups_draggable="False">
                <field name="state_of_sale"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <span style="color: black; font-weight: bold;"><field name="name"/></span>
                            <field name="properties_tags_id" widget="many2many_tags" options="{'color_field': 'couleur'}"/>
                            <div>
                                <span style="margin-left: 20px;">State Of Sale : <field name="state_of_sale"/></span>
                            </div>
                            <div>
                                <span style="margin-left: 20px;">Expected Price : <field name="expected_price"/></span>
                            </div>
                            <div t-if="record.state_of_sale.raw_value == 'Offer Received'">
                                <span style="margin-left: 20px;">Best Price : <field name="best_offer"/></span>
                            </div>
                            <div t-if="record.state_of_sale.raw_value == 'Offer Accepted'">
                                <span style="margin-left: 20px;color: green;">Selling Price : <field name="selling_price"/></span>
                            </div>
                            <div t-if="record.state_of_sale.raw_value == 'Sold'">
                                <span style="margin-left: 20px;color: green;font-weight: bold;">Selling Price : <field name="selling_price"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="domaines_proprietes_offer_tree" model="ir.ui.view">
        <field name="name">domaines_proprietes_offer_tree_view</field>
        <field name="model">domaines_proprietes_offer</field>
        <field name="arch" type="xml">
            <tree string="Offre_tree" editable="bottom" decoration-success="confirmed==True" decoration-danger="confirmed==False" >
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="deadline"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check" invisible ="status == 'Accepted' or status == 'Refused'"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times" invisible ="status == 'Accepted' or status == 'Refused'"/>
                <field name="status" invisible ="1" optional="hidden"/>
                <field name="confirmed" invisible ="1" optional="hidden" />
            </tree>  
        </field>
    </record>

    <record id="domaines_proprietes_offer_form" model="ir.ui.view">
        <field name="name">domaines_proprietes_offer_form</field>
        <field name="model">domaines_proprietes_offer</field>
        <field name="arch" type="xml">
            <form string="Domaines Properties Offers">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="domaines_proprietes_types_custom_tree" model="ir.ui.view">
        <field name="name">domaines_proprietes_types_tree_view</field>
        <field name="model">domaines_proprietes_types</field>
        <field name="arch" type="xml">
            <tree string="Propriétés" >
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="domaines_proprietes_types_form" model="ir.ui.view">
        <field name="name">domaines_proprietes_types_form</field>
        <field name="model">domaines_proprietes_types</field>
        <field name="arch" type="xml">
            <form string="Domaines Properties Types">
                <div class="d-flex justify-content-end">
                    <button name="%(domaines_proprietes_offers_action)d" 
                        class="oe_stat_button p-2 m-2 border"
                        type="action">
                        <i class="fa fa-money" style="font-size: 22px;"></i>
                        <span class="m-2" style="font-size: 18px;">
                            <field string="" name="offer_count" widget="statinfo" style="font-size: 19px;"/> Offre(s)
                        </span>
                    </button>
                </div>              
                <field name="name" style="font-size: 30px;"/>    
                <field name="property_ids">
                    <tree default_order="expected_price desc">
                        <field name="name"/>
                        <field name="expected_price"/>
                        <field name="state_of_sale"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="domaines_proprietes_tags_custom_tree" model="ir.ui.view">
        <field name="name">domaines_proprietes_tags_tree_view</field>
        <field name="model">domaines_proprietes_tags</field>
        <field name="arch" type="xml">
            <tree string="Propriétés" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="domaines_proprietes_inhereted_users_view" model="ir.ui.view">
        <field name="name">res.users_form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Properties">
                    <field name="property_ids" />
                </page>
            </notebook>
        </field>
    </record>   
</odoo>
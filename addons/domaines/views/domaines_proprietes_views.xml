<?xml version="1.0"?>
<odoo>
    <record id="domaines_proprietes_custom_tree" model="ir.ui.view">
        <field name="name">domaines_proprietes_tree_view</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <tree string="Propriétés">
                <field name="name"/>
                <field name="description"/>
                <field name="state_of_sale"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="postcode"/>
                <field name="total_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="best_offer"/>
            </tree>
        </field>
    </record>

    <record id="view_domaines_proprietes_search" model="ir.ui.view">
        <field name="name">domaines_proprietes_search</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <search string="Search_Group">
                <field name="name"/>
                <field name="postcode"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="3 Bedroms" name="3_bedroms" domain="[('bedrooms', '=',3)]"/>
                <filter string="Disponibles" name="proprietes_disponibles" domain="['|',('state_of_sale', '=','New'),('state_of_sale', '=','Offer Received')]"/>
                <group expand="1">
                    <filter string="Postcode" name="gostcode" context="{'group_by':'postcode'}"/>
                    <filter string="Garages" name="garage" context="{'group_by':'garage'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="domaines_proprietes_view_form" model="ir.ui.view">
        <field name="name">domaines_proprietes_form</field>
        <field name="model">domaines_proprietes</field>
        <field name="arch" type="xml">
            <form string="Domaines Properties">
                <header>
                    <button name="Sold_action" type="object" class="oe_highlight" string="Sold"/>
                    <button name="Canceled_action" type="object" class="oe_highlight" string="Cancel"/>
                </header>                   
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16" style="font-family: Arial, sans-serif; font-size: 45px; font-weight: bold;"/>
                        </h1>
                        <field name="properties_tags_id" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="state_of_sale"/>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="living_area"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_id"/>
                        </page>
                        <page string="Other Information">
                            <group>
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>               
                </sheet>
            </form>
        </field>
    </record>

    <record id="domaines_proprietes_offer_tree" model="ir.ui.view">
        <field name="name">domaines_proprietes_offer_tree_view</field>
        <field name="model">domaines_proprietes_offer</field>
        <field name="arch" type="xml">
            <tree string="Offre_tree">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="deadline"/>
                <field name="status"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times"/>
            </tree>  
        </field>
    </record>

    <record id="domaines_proprietes_offer_form" model="ir.ui.view">
        <field name="name">domaines_proprietes_offer_form</field>
        <field name="model">domaines_proprietes_offer</field>
        <field name="arch" type="xml">
            <form string="Domaines Properties Offers">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>